extends ../layout

block content
    .container-fluid.container.mt15
      .row-fluid
        .span9.left
          .container-box
            p= success
            form.form-horizontal(action='/users/create', method='POST')
              fieldset
                #legend.mb50
                  legend 注册
                if notices && notices.length != 0
                  ul.errors.alert.alert-error
                    each notice in notices 
                      li= notice
                p= infos
                .control-group
                  // Username
                  label.control-label(for='username') 用户名
                  .controls
                    if username
                      input#username.input-xlarge(type='text', name='user[username]',placeholder='', value="#{username}")
                    else
                      input#username.input-xlarge(type='text', name='user[username]',placeholder='')
                    p.help-block 用户名由字母开头，只能含有字母、数字或者下划线
                .control-group
                  // E-mail
                  label.control-label(for='email') E-mail
                  .controls
                    if email
                      input#email.input-xlarge(type='text', name='user[email]', placeholder='', value="#{email}")
                    else
                      input#email.input-xlarge(type='text', name='user[email]', placeholder='')
                    p.help-block 请输入你的E-mail，便于登录和找回密码
                .control-group
                  // Password
                  label.control-label(for='password') 密码
                  .controls
                    input#password.input-xlarge(type='password', name='user[password]', placeholder='')
                    p.help-block 密码不少于4个字符
                .control-group
                  // Password
                  label.control-label(for='password_confirm') 密码（确认）
                  .controls
                    input#password_confirm.input-xlarge(type='password', name='user[password_confirm]', placeholder='')
                    p.help-block 请再次输入密码
                .control-group
                  // Button
                  input.csrf(type='hidden', name='_csrf', value="#{locals.csrf_token}")
                  .controls
                    button.btn.btn-success 注册
        .span3.right
          .intro.container-box.sidebox
            .ui-header
              span.title 关于
            .ui-content
              p= locals.about
